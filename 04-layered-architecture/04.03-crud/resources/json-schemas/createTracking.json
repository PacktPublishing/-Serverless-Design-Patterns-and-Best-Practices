{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Create TrackingObject Schema",
    "description": "JSONSchema for create tracking object service payload",
    "type": "object",
    "properties": {
        "uuid": {
            "type": "string"
        },
        "trackers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    }
                },
                "required": ["email"]
            }
        }
    },
    "additionalProperties": true,
    "required": ["uuid", "trackers"]
}
